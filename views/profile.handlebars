<h2>Personal Information</h2>
<div id="info">
  Username: {{username}}<br>
  <br>
  <button class="btn btn-primary" data-toggle="modal" data-target="#changePassForm">Change Password</button>
</div>
<h2>Services</h2>
<ul id="services" class="list-group">
  <li class='list-group-item'>
    YouTube
    <div class="authorize">
      <a href="{{youtube_url}}" class="btn btn-primary">Authorize</a>
      <!-- Commenting out, will aim to implement for next release -->
      <a href="/oauth2/deauthorize" class="btn btn-danger">Deauthorize</a>
    </div>
  </li>
</ul>
<div class="modal fade" id="changePassForm" tabindex="-1" role="dialog" aria-labelledby="changePassLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
          <span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title" id="changePassLabel">
          Change Password
        </h4>
      </div>
      <div class="modal-body">
        <form class="form-horizontal form-changepass" role="form" method="post" action="/user/change-pass">
          <input type="password" class="form-control" name="currPass"
          id="inputCurrentPassword" title="Current Password" placeholder="Current Password" required autofocus/>
          <input type="password" class="form-control" name="newPass"
          id="inputNewPassword" title="New Password" placeholder="New Password" required/>
          <input type="password" class="form-control"
          id="inputNewPassConfirm" title="Confirm New Password" placeholder="Confirm New Password" required/>
          <button type="submit" class="btn btn-default">Change Password</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{#if message}}
<script>
showDialog("{{message}}", "{{status}}"); // /javascripts/common.js
</script>
{{/if}}
